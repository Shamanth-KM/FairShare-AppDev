@using Microsoft.AspNetCore.Mvc.Rendering
@model FairShare.Web.ViewModels.GroupEditViewModel

@{
    ViewData["Title"] = "Edit Group";
}

<h2 class="mb-3">Edit Group</h2>

<form asp-action="Edit" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedUtc" />

    <div class="col-12 col-lg-8">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12 col-lg-4">
        <div class="card">
            <div class="card-header"><strong>Members</strong></div>
            <div class="card-body" style="max-height: 320px; overflow:auto;">
                @if (Model.AllUsers?.Any() == true)
                {
                    foreach (var u in Model.AllUsers)
                    {
                        var isChecked = Model.SelectedUserIds.Contains(int.Parse(u.Value));
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="SelectedUserIds"
                                   id="user_@u.Value"
                                   value="@u.Value"
                                   @(isChecked ? "checked" : "") />
                            <label class="form-check-label" for="user_@u.Value">@u.Text</label>
                        </div>
                    }
                }
                else
                {
                    <div class="text-muted">No users available.</div>
                }
            </div>
        </div>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-link">Cancel</a>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
