@model FairShare.Web.Models.Expense
@{
    ViewData["Title"] = "Expense Details";
}
<h2>@Model.Description</h2>
<p><strong>Amount:</strong> @Model.Amount.ToString("C")</p>
<p><strong>Group:</strong> @Model.Group?.Name</p>
<p><strong>Paid By:</strong> @Model.PaidByUser?.Name</p>
<p><strong>Date:</strong> @Model.SpentOnUtc.ToShortDateString()</p>
<h4 class="mt-3">Shares</h4>
<table class="table table-sm">
  <thead><tr><th>User</th><th>Amount</th><th>Settled</th></tr></thead>
  <tbody>
@foreach (var s in Model.Shares)
{
  <tr>
    <td>@s.User?.Name</td>
    <td>@s.ShareAmount.ToString("C")</td>
    <td>@s.IsSettled</td>
  </tr>
}
  </tbody>
</table>
<a asp-action="Index" class="btn btn-link">Back</a>
