@model IEnumerable<FairShare.Web.Models.User>
@{
    ViewData["Title"] = "Users";
}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Users</h2>
  <a class="btn btn-primary" asp-action="Create">Add User</a>
</div>
<table class="table table-striped">
  <thead><tr><th>Name</th><th>Email</th><th>Active</th><th></th></tr></thead>
  <tbody>
@foreach (var u in Model)
{
  <tr>
    <td>@u.Name</td>
    <td>@u.Email</td>
    <td>@u.IsActive</td>
    <td class="text-end">
      <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@u.Id">Edit</a>
      <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@u.Id">Delete</a>
    </td>
  </tr>
}
  </tbody>
</table>
