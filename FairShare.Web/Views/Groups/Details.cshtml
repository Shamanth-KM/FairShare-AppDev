@using FairShare.Web.Models
@model Group

@{
    ViewData["Title"] = "Group Details";
}

<h2 class="mb-2">@Model.Name</h2>
@if (!string.IsNullOrWhiteSpace(Model.Description))
{
    <p class="text-muted">@Model.Description</p>
}
<p class="small text-secondary">Created: @Model.CreatedUtc.ToLocalTime()</p>

<div class="card p-3 my-3">
    <div><strong>Total (stored currency):</strong> @ViewBag.TotalUSD</div>

    <form asp-action="Details" method="get" class="row row-cols-lg-auto g-2 align-items-center mt-2">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="col-12">
            <label for="to" class="col-form-label me-2">View totals in:</label>
            <select id="to" name="to" class="form-select form-select-sm d-inline-block" style="width:auto">
                @{
                    var options = new[] { "USD", "EUR", "INR", "GBP" };
                    var selected = (string)(ViewBag.ConvertedTo ?? "USD");
                    foreach (var c in options)
                    {
                        <option value="@c" selected="@(c == selected)">@c</option>
                    }
                }
            </select>
        </div>
        <div class="col-12">
            <button class="btn btn-primary btn-sm">Convert</button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm ms-1">Reset</a>
        </div>
    </form>

    @if (ViewBag.ConvertedTotal != null)
    {
        <div class="alert alert-info mt-3 mb-0">
            <strong>Converted Total:</strong> @ViewBag.ConvertedTotal
        </div>
    }
</div>

@{
    var members = ViewBag.Members as IEnumerable<FairShare.Web.Models.User>;
}
<div class="card my-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <strong>Members</strong>
        @if (members != null) { <span class="badge bg-secondary">@members.Count()</span> }
    </div>
    @if (members == null || !members.Any())
    {
        <div class="card-body">
            <div class="text-muted">No members yet. Add some via Edit Group.</div>
        </div>
    }
    else
    {
        <ul class="list-group list-group-flush">
            @foreach (var u in members)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>@u.Name</span>
                    <small class="text-muted">@u.Email</small>
                </li>
            }
        </ul>
    }
</div>

<div class="d-flex justify-content-between align-items-center mt-4 mb-2">
    <h4 class="mb-0">Expenses</h4>
    <a asp-controller="Expenses"
       asp-action="Create"
       asp-route-groupId="@Model.Id"
       class="btn btn-success btn-sm">
        + Add Expense
    </a>
</div>

@if (Model.Expenses == null || !Model.Expenses.Any())
{
    <div class="alert alert-warning">No expenses yet. Add your first one!</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Paid By</th>
                <th class="text-end">Amount (USD)</th>
                <th style="width: 120px;"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in Model.Expenses.OrderByDescending(x => x.SpentOnUtc))
        {
            <tr>
                <td>@e.SpentOnUtc.ToLocalTime().ToString("yyyy-MM-dd")</td>
                <td>@e.Description</td>
                <td>@(e.PaidByUser?.Name ?? "â€”")</td>
                <td class="text-end">@e.Amount.ToString("0.00")</td>
                <td class="text-nowrap">
                    <a asp-controller="Expenses" asp-action="Details" asp-route-id="@e.Id">Details</a> |
                    <a asp-controller="Expenses" asp-action="Edit" asp-route-id="@e.Id">Edit</a> |
                    <a asp-controller="Expenses" asp-action="Delete" asp-route-id="@e.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to Groups</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary ms-1">Edit Group</a>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
