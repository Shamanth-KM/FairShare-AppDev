@model IEnumerable<FairShare.Web.Models.Group>
@{
    ViewData["Title"] = "Groups";
}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Groups</h2>
  <a class="btn btn-primary" asp-action="Create">Add Group</a>
</div>
<table class="table table-striped">
  <thead><tr><th>Name</th><th>Description</th><th>Members</th><th></th></tr></thead>
  <tbody>
@foreach (var g in Model)
{
  <tr>
    <td>@g.Name</td>
    <td>@g.Description</td>
    <td>@(g.Members?.Count ?? 0)</td>
    <td class="text-end">
      <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@g.Id">Edit</a>
      <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@g.Id">Delete</a>
    </td>
  </tr>
}
  </tbody>
</table>
